<?page title="Completed Tasks" contentType="text/html;charset=UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c" ?>
<?init class="org.zkoss.zkplus.databind.AnnotateDataBinderInit" arg0="win" ?>
<!-- 
	Filter Dialog for Completed Task Search
	@author YO, 20090508, created
	@version 1.00.001
-->
