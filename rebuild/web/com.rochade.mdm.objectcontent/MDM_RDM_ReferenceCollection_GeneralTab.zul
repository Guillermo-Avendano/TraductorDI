<?xml version="1.0" encoding="UTF-8"?>
<?page title="MDM View" contentType="text/html;charset=UTF-8"?>
<?taglib uri="/WEB-INF/tld/web/wtb.dsp.tld" prefix="wtb" ?>
<!--
	@author	<UL>
			<LI>SA 17/08/2011, created</LI>
			<LI>SB 27/01/2012, filter and query layout fixed</LI>
			<LI>SB 27/01/2012, first and last scan attributes changed to readonly</LI>
